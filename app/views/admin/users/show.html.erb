<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>        
        <%= @user.firstname %> <%= @user.lastname %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @activities.any? %>
      <h3><%= t :activities %> (<%= @user.activities.count %>)</h3>
      <ol class="activities">
        <%= render @activities %>
      </ol>
      <%= will_paginate @activities %>
    <% end %>
  </div>
</div>