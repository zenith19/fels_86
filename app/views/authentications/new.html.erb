<h1>Log in</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for :authentication, url: signin_path do |f| %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      
      <%= f.submit t('authentication.submit'), class: "btn btn-primary" %>
    <% end %>
    
    <p>New user? <%= link_to t('authentication.signup_link'), signup_path %></p>
  </div>
</div>